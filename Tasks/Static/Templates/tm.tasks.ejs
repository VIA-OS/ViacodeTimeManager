{% extends "index.html" %}

<!-- Block for all custom scripts-->
{% block scripts %}
    <script type="text/javascript" src="{{STATIC_URL}}scripts/tm.accordion.js"></script>
    <script type="text/javascript" src="{{STATIC_URL}}scripts/tm.draggable.js"></script>
    <script type="text/javascript" src="{{STATIC_URL}}scripts/tm.buttons.js"></script>
    <script type="text/javascript" src="{{STATIC_URL}}scripts/tm.ajax.js"></script>
    <script type="text/javascript" src="{{STATIC_URL}}scripts/tm.datefilter.js"></script>
{% endblock %}


<!-- Block for tasks -->
{% block content %}
<div class="date_filter">
    <p>Date: <input type="text" id="task_by_date_filter"></p>
</div>
<div id="accordion">
{% for task in tasks %}
    <div class="mydrags">
        <h3>
            <a href="#">
                <button class="sort_button"></button>
                <button class="drag_button"></button>
                {{ task.assigned_to_date }} {{task.task_title}}
            </a>

        </h3>
        <div>
            <p>{{ task.description }}</p>
            <p>{{ task.task_create_date }}</p>
        </div>
    </div>
{% endfor %}

</div>
{% endblock %}
